<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="@GETTEXT_PACKAGE@">
  <enum id="org.freedesktop.IBus.McBopomofo.input-mode">
    <value nick="McBopomofo" value="0"/>
    <value nick="PlainBopomofo" value="1"/>
  </enum>

  <enum id="org.freedesktop.IBus.McBopomofo.bpmf-keyboard-layout">
    <value nick="standard" value="0"/>
    <value nick="eten" value="1"/>
    <value nick="hsu" value="2"/>
    <value nick="et26" value="3"/>
    <value nick="hanyupinyin" value="4"/>
    <value nick="ibm" value="5"/>
  </enum>

  <enum id="org.freedesktop.IBus.McBopomofo.cand-layout-hint">
    <value nick="system" value="-1"/>
    <value nick="horizontal" value="0"/>
    <value nick="vertical" value="1"/>
  </enum>

  <enum id="org.freedesktop.IBus.McBopomofo.select-phrase">
    <value nick="before_cursor" value="0"/>
    <value nick="after_cursor" value="1"/>
  </enum>

  <enum id="org.freedesktop.IBus.McBopomofo.behavior-shift-letter-keys">
    <value nick="directly_output_uppercase" value="0"/>
    <value nick="put_lowercase_to_buffer" value="1"/>
  </enum>

  <enum id="org.freedesktop.IBus.McBopomofo.behavior-ctrl-enter">
    <value nick="disabled" value="0"/>
    <value nick="output_bpmf_reading" value="1"/>
    <value nick="output_html_ruby_text" value="2"/>
  </enum>

  <schema id="org.freedesktop.IBus.McBopomofo" path="/desktop/ibus/engine/mcbopomofo/">
    <key name="cand-per-page" type="i">
      <range min="1" max="16"/>
      <default>10</default>
      <summary>Candidates per page</summary>
    </key>
    <key name="selection-keys" type="s">
      <default>'1234567890'</default>
      <summary>Candidate selection keys</summary>
      <description>One character represents an entry. Will be truncated down to candidates per page.</description>
    </key>
    <key name="cand-layout-hint" enum="org.freedesktop.IBus.McBopomofo.cand-layout-hint">
      <default>'system'</default>
      <summary>Layout direction of candidate table</summary>
    </key>
    <key name="select-phrase" enum="org.freedesktop.IBus.McBopomofo.select-phrase">
      <default>'before_cursor'</default>
      <summary>Which character to select a candidate with respect to the cursor</summary>
    </key>
    <key name="behavior-shift-letter-keys" enum="org.freedesktop.IBus.McBopomofo.behavior-shift-letter-keys">
      <default>'directly_output_uppercase'</default>
      <summary>The behavior of letter keys while shift is pressed</summary>
    </key>
    <key name="behavior-ctrl-enter" enum="org.freedesktop.IBus.McBopomofo.behavior-ctrl-enter">
      <default>'disabled'</default>
      <summary>The behavior of committing when pressing ctrl-Enter</summary>
    </key>
    <key name="open-user-phrase-files-with" type="s">
      <default>'xdg-open'</default>
      <summary>App to open custom phrase text files</summary>
    </key>
    <key name="add-script-hook-path" type="s">
      <default>''</default>
      <summary>The path to hook-script after a phrase is added</summary>
    </key>
    <key name="esc-clears-entire-composing-buffer" type="b">
      <default>false</default>
      <summary>Esc clears the entire composing buffer</summary>
    </key>

    <key name="input-mode" enum="org.freedesktop.IBus.McBopomofo.input-mode">
      <default>'McBopomofo'</default>
      <summary>Input mode</summary>
    </key>
  </schema>
</schemalist>
